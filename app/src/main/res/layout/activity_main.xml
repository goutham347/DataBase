<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/activity_main"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingBottom="@dimen/activity_vertical_margin"
             android:paddingLeft="@dimen/activity_horizontal_margin"
             android:paddingRight="@dimen/activity_horizontal_margin"
             android:paddingTop="@dimen/activity_vertical_margin">

    <TableRow>
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user name"
            android:textSize="15sp"
            android:padding="15dp"/>

        <EditText
            android:id="@+id/edt_username"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:hint="Enter user name"
            android:padding="15dp"/>


    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/tv_quali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qualificaton"
            android:textSize="15dp"
            android:padding="15dp"/>

        <EditText
            android:id="@+id/edt_quali"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:hint="Enter User Qualification"
            android:padding="15dp"/>

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/tv_yrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year of passing"
            android:textSize="15dp"
            android:padding="15dp"/>


        <EditText
            android:id="@+id/edt_yrop"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="Enter the Passing Year"
            android:padding="15dp"/>

    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Id"
            android:textSize="15dp"
            android:padding="15dp"/>


        <EditText
            android:id="@+id/edt_id"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="Enter Your Id"
            android:padding="15dp"/>

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/tv_rolno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll No"
            android:textSize="15dp"
            android:padding="15dp"/>


        <EditText
            android:id="@+id/edt_rolno"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="Enter Your Rollno"
            android:padding="15dp"/>

    </TableRow>

    <TableRow android:layout_width="wrap_content"
              android:padding="15dp"
              android:weightSum="2">

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        <Button
            android:id="@+id/btn_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ViewAll"
            android:layout_weight="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    </TableRow>

    <TableRow
        android:weightSum="3"
        android:padding="15dp">

        <Button
            android:id="@+id/btn_dlt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        <Button
            android:id="@+id/btn_dltall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DeleteAll"
            android:layout_weight="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        <Button
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_weight="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </TableRow>

</TableLayout>
